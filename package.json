{
  "name": "vkang-erp",
  "version": "1.0.0",
  "description": "Vkang ERP - Product Distribution Management System",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
    "test": "jest",
